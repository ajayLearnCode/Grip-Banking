    <link rel="stylesheet" href="/login.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!-- google font -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@700&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-dark  navbar-expand-md " style="background-color: rgba(146, 22, 22, 0.795);">
        <a class="navbar-brand " id="navbrandname" href="">
             Grip Bank</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01" >
            <ul class="navbar-nav ml-auto" >
                <li class="nav-item  ">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item" >
                    <a class="nav-link" href="/users/showusers">Customers</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="/hist/history">Transactions</a>
                </li>
            </ul>
        </div>
    </nav>
    {{#if message2}}
           <h4 class="alert alert-danger mt-4 ml-5">{{message2}}</h4>
    {{/if}}
    <!-- form -->
    <div class="userlogin">
        <div class="row">
            <div class="ig">
                <img class="loginimg"src="/images/loginimg.png" alt="userlogin">
            </div>
            <div class="details">
                <form action="/auth/newuser" method="POST">
                    <h3 class="info">Create</h3>
                    <input class="info" type="text" placeholder="Name" name="name"><br>
                    <input class="info" type="email" placeholder="Email" name="email"><br>
                    <input class="info" type="text" placeholder="Balance" name="balance"><br>
                    <button class="info btn btn-warning" type="submit">Create</button>
                </form>
        
            </div>
        </div>
        {{#if message}}
           <h4 class="alert alert-danger mt-4">{{message}}</h4>
        {{/if}}
    </div>


    <footer>
        @2021 Made By Akash Bendre <br> The Spark Foundation
    </footer>
    
